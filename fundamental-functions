#Consolidation of Basic Functions
def my_hello():
    print("Hello!")

my_hello()

def say_goodbye():
    print("Goodbye!")

say_goodbye()
say_goodbye()

def greet_person(name):
    print(f"Hello, {name}!")

name = input("What's your name? ")
greet_person(name)

def dub_num(number):
   print(number *2)

number = int(input("Please gimmie a number."))
dub_num(number)

